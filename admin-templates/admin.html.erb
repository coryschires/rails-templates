!!!
%html
%head
  %title=(yield(:title) || "Untitled")
	=yield(:meta_keywords)
	=yield(:meta_description)

  = html5 'http://html5shiv.googlecode.com/svn/trunk/html5.js'
  = csrf_meta_tag

  =javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js'
  =javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.1/jquery-ui.min.js'
  =javascript_include_tag 'rails', 'jquery.browser', 'jquery.validate'

	=yield(:head)

  =javascript_include_tag 'admin'
  =stylesheet_link_tag 'admin'
  
%body
  #pagewrap
    %nav
      =link_to "Dashboard", :controller => "admin", :action => "dashboard"
      &nbsp;|&nbsp;
      =link_to "Navigation", "#"
      &nbsp;|&nbsp;
      =link_to "Navigation", "#"
      &nbsp;|&nbsp;
      =link_to "Logout", ""

    = yield(:title) if show_title?
    = yield(:sub_title)

    -flash.each do |name, msg|
      = content_tag :div, msg, :id => "flash_#{name}"

    %hr
    #main=yield
    
  %footer
    #copyright
      ==&copy; #{Time.now.year} Ones &amp; Zeros Web Design